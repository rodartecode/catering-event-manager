# =============================================================================
# GO SCHEDULING SERVICE ENVIRONMENT
# =============================================================================
# Copy this file to .env and fill in your actual values
# This service handles high-performance resource conflict detection

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string (shared with Next.js app)
DATABASE_URL="postgresql://admin:changeme@localhost:5432/catering_events"

# =============================================================================
# HTTP SERVER
# =============================================================================
# Port for Fiber web server to listen on
# Must match SCHEDULING_SERVICE_URL in Next.js app (default: 8080)
PORT=8080

# Server host binding (use 0.0.0.0 for Docker, localhost for local dev)
HOST="localhost"

# =============================================================================
# LOGGING
# =============================================================================
# Log level for application logging
# Options: debug, info, warn, error
LOG_LEVEL="info"

# Enable JSON structured logging (recommended for production)
JSON_LOGS="false"

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
# Database connection pool settings
DB_MAX_OPEN_CONNS="25"
DB_MAX_IDLE_CONNS="5"
DB_CONN_MAX_LIFETIME="5m"

# Query timeout for resource conflict detection (must be fast)
QUERY_TIMEOUT="100ms"

# Cache TTL for conflict detection results
CONFLICT_CACHE_TTL="30s"

# =============================================================================
# CORS & SECURITY
# =============================================================================
# Allowed origins for CORS (Next.js app URL)
CORS_ORIGINS="http://localhost:3000"

# Enable request ID tracing
ENABLE_REQUEST_ID="true"

# Rate limiting (requests per minute per IP)
RATE_LIMIT="300"

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Environment (development, staging, production)
GO_ENV="development"

# Enable development features (detailed error responses, debug endpoints)
DEBUG_MODE="true"

# Enable request/response logging
LOG_REQUESTS="false"

# =============================================================================
# HEALTH CHECKS
# =============================================================================
# Health check endpoint path
HEALTH_PATH="/api/v1/health"

# Database ping timeout for health checks
DB_PING_TIMEOUT="2s"

# =============================================================================
# OPTIONAL: MONITORING
# =============================================================================
# Prometheus metrics endpoint (not yet implemented)
# METRICS_ENABLED="false"
# METRICS_PATH="/metrics"

# Distributed tracing (not yet implemented)
# JAEGER_ENDPOINT=""
# TRACE_RATIO="0.1"